<h1>Booklist</h1>

<table>
<thead>
<tr>
  <th>Title</th>
  <th>Author</th>
  <th colspan="3"></th>
</tr>
</thead>

<tbody>
	<% @booklist.each do |book| %>
		<tr>
			<td><%= book.name %></td>
			<td><%= book.author %></td>
			<td><%= link_to 'Show', booklist_path(book) %></td>
    		<td><%= link_to 'Edit', edit_booklist_path(book) %></td> <!-- Edit this particular book -->
    		<td><%= link_to 'Destroy', booklist_path(book), method: :delete, data: { confirm: 'Are you sure?' } %></td>
		</tr>	
	<% end %>
</tbody>

</table>

<%= link_to 'Add new book', new_booklist_path %>